---
import Layout from "../layouts/Layout.astro";
import Game from "../components/Game";
import Github from "../components/Github.astro";
import ThemeToggle from "../components/ThemeToggle";
---

<Layout title="Play Checkers">
  <main class="min-h-screen grid justify-center content-start">
    <header class="text-4xl mt-4 w-[var(--board-size)]">
      <div class="flex justify-between gap-6 mb-2">
        <a
          href="https://github.com/Crazytieguy/checkers"
          target="_blank"
          title="Github repo"
        >
          <Github />
        </a>
        <ThemeToggle client:idle />
      </div>
      <h1 class="mx-auto text-center">Play Checkers!</h1>
    </header>
    <Game client:only="solid-js" />
  </main>
</Layout>
